{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "shared": [
        "../shared/dist/cjs"
      ],
      "shared/*": [
        "../shared/dist/cjs/*"
      ]
    }
  },
  "references": [
    {
      "path": "../shared"
    }
  ]
}
